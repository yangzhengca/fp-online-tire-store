<div class="container">
    <div class="row">
        <div class="col-6 m-auto">
            <h1>Add a new product</h1>
            <form action="/admin/create" method="POST">
                <label for="imagePathInput">Image Path</label>
                <input type="text" name="imagePath" id="imagePathInput" required class="form-control">

                <label for="titleInput">Title</label>
                <input type="text" name="title" id="titleInput" required class="form-control">

                <label for="descriptionInput">Description</label>
                <input type="text" name="description" id="descriptionInput" required class="form-control">

                <label for="widthInput">Width</label>
                <input type="number" name="width" id="widthInput" required class="form-control">

                <label for="aspectRatioInput">Aspect Ratio</label>
                <input type="number" name="aspectRatio" id="aspectRatioInput" required class="form-control">

                <label for="diameterInput">Diameter</label>
                <input type="number" name="diameter" id="diameterInput" required class="form-control">

                <label for="priceInput">Price</label>
                <input type="number" name="price" id="priceInput" required class="form-control">

                <label for="inStockInput">In Stock</label>
                <input type="number" name="inStock" id="inStockInput" required class="form-control">
                
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                
                <a href="/user/profile" class="btn btn-secondary btn-lg mt-4">Cancel</a>
                <button type="submit" class="btn btn-primary btn-lg mt-4">Save</button>

            </form>
        </div>
    </div>
    
</div>