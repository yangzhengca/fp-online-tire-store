{{# each products }}
<div class="row">
    {{# each this}}
    <div class="card col-sm-6 col-md-4" >
        <img src="{{ this.imagePath }}" class="card-img-top img-fluid" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <div>
                <div class="price float-start">${{this.price}}</div>
                <a href="/add-to-cart/{{this.id}}" class="btn btn-success float-end">Add to Cart</a>
            </div>
        </div>   
       </div> 
    {{/each}}    
</div>
{{/each}}

