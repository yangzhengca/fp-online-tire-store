{{# each products }}
<section class="py-5">
<div class="row">    
    {{# each this}}
    <div class="card h-100 col-sm-6 col-md-4" >
        <img src="{{ this.imagePath }}" class="card-img-top img-fluid" alt="...">
        <div class="card-body p-4">
            <h5 class="card-title">{{this.title}}</h5>
            <h6>Tire Size: {{this.width}}/{{this.aspectRatio}}R{{this.diameter}}</h6>
            <p class="card-text">{{this.description}}</p>
            <div>
                <div class="price float-start">${{this.price}}</div>
                <a href="/add-to-cart/{{this.id}}" class="btn btn-success float-end">Add to Cart</a>
            </div>
        </div>   
       </div> 
    {{/each}}   
</div>
{{/each}}

 </section>  


