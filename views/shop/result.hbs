{{# if product}}
<section class="py-5">     
    <div class="row inner-wrap justify-content-evenly">
        {{# each product }}            
        <div class="card h-100 col-sm-6 col-md-4">                    
            <img src="{{ this.imagePath }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <h6>Tire Size: {{this.width}}/{{this.aspectRatio}}R{{this.diameter}}</h6>
                <p class="card-text">{{this.description}}</p>
                <div class="price float-start">${{this.price}}</div>
                    <a href="/add-to-cart-from-result/{{this._id}}" class="btn btn-success float-end">Add to Cart</a>
                </div>  
            </div>
        {{/each}}                      
        </div>                         
    </div> 
</section>


    
     
{{else}} 
<section>   
    <div class="row">
        <div class="col-md-6">
            <h1>No product found.</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-secondary" href="/">Back to Home Page</a>
            <a class="btn btn-secondary" href="/products">See all products</a>
        </div>
    </div>
</section> 
{{/if}} 

 




