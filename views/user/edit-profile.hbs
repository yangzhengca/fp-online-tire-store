<div class="container-fluid padding mt-4">
	<div class="row padding">
		               
        {{#if selectedUser.avatarPath}}
        <div class="col-lg-3">
            <img src="{{selectedUser.avatarPath}}" alt="avatar" class="img-fluid border border-secondary">
        </div>
        {{else}}
        <div class="col-lg-3">
            <img src="https://i.imgur.com/cSjQzIr.png" alt="default-avatar.png" class="img-fluid border border-secondary">
        </div>
        {{/if}}


        <div class="col-lg-7">
            <h1>Edit user profile</h1>
            <form action="/user/edit/{{selectedUser.id}}" method="POST" class="mt-4">                
                <div class="row">
                    <div class="col-12">
                        <label for="emailInput">Email</label>
                        <input type="text" name="email" id="emailInput" required class="form-control" value="{{selectedUser.email}}">
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <label for="firstNameInput">First Name</label>
                        <input type="text" name="firstName" id="firstNameInput" required class="form-control" value="{{selectedUser.firstName}}">
                    </div>
                    <div class="col-6">
                        <label for="lastNameInput">Last Name</label>
                        <input type="text" name="lastName" id="lastNameInput" required class="form-control" value="{{selectedUser.lastName}}">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="addressInput">Shipping Address</label>
                        <input type="text" name="address" id="addressInput" required class="form-control" value="{{selectedUser.address}}">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <label for="cityInput">City</label>
                        <input type="text" name="city" id="cityInput" required class="form-control" value="{{selectedUser.city}}">
                    </div>
                    <div class="col-4">
                        <label for="provinceInput">Province</label>
                        <input type="text" name="province" id="provinceInput" required class="form-control" value="{{selectedUser.province}}">
