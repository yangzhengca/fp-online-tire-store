                    </div>
                    <div class="col-4">
                        <label for="postalCodeInput">Postal Code</label>
                        <input type="text" name="postalCode" id="postalCodeInput" required class="form-control" value="{{selectedUser.postalCode}}">
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <label for="avatarPathInput">Avatar Url</label>
                        <input type="text" name="avatarPath" id="avatarPathInput" required class="form-control" value="{{selectedUser.avatarPath}}">
                    </div>
                </div>         
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                
                <a href="/user/profile" class="btn btn-secondary btn-lg mt-4">Cancel</a>
                <button type="submit" class="btn btn-primary btn-lg mt-4">Update</button>
            </form>
        </div>
    </div>
</div>