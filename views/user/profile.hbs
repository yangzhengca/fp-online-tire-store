<h1>User Profile</h1>
<section class="py-5">
    {{#if avatarPath}}
    <div class="col-lg-3">
		<img src="{{avatarPath}}" alt="avatar" class="img-fluid border border-secondary">
	</div>
    {{else}}
    <div class="col-lg-3">
        <img src="https://i.imgur.com/cSjQzIr.png" alt="default-avatar" class="img-fluid border border-secondary">
    </div>
    {{/if}}
    <h1 class="display-3">
        Welcome {{firstName}}! 
    </h1>
    <hr>
    <div class="row">
        <div class="col-md-8">
            <h2>My Orders</h2>
            {{# each orders}}
            <div class="card" style="width: 18rem;">
                <ul class="list-group list-group-flush">
                    {{# each this.items}}
                    <li class="list-group-item"><span class="badge rounded-pill bg-secondary">{{this.price}}</span>{{this.item.title}}|{{this.qty}} Units</li>
                    {{/each}}
                </ul>
                <div class="card-footer">
                    <strong>Total Price: ${{this.cart.totalPrice}}</strong>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    {{#if address}}
    <p class="lead">Please confirm the shipping address in your profile before ordering.</p>
    <div class="col-lg-3">
        <h4>Shipping Address:</h4>
		<div> {{firstName}} {{lastName}}</div>
        <div> {{address}}</div>
        <div> {{city}}, {{province}} {{postalCode}}</div>
	</div>
    {{else}}
    <div class="col-lg-6">
        <h4>No shipping address in your profile.</h4>
        <p class="lead">Please add shipping address to your profile before ordering.</p>
	</div>
    {{/if}}
    <a href="/" class="btn btn-success btn-lg">Go Back Home</a>
    <a href="/user/{{id}}" class="btn btn-success btn-lg">Edit Profile</a>
</section>

