<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
				  <i class="fas fa-user-plus"></i>  Sign Up
			</h1>
            {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{#each messages}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}
            <form action="/user/signup" method="POST">               
                    <div class="form-group">
                        <label for="inputEmail1" class="form-label">Email address</label>
                        <input type="email" class="form-control form-control-lg" id="inputEmail1" name="email" aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>                   
                
                    <div class="mb-3">
                        <label for="inputPassword1" class="form-label">Password</label>
                        <input type="password" class="form-control form-control-lg" id="inputPassword1" name="password">
                    </div>
 

                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-primary btn-block mt-2">Sign Up</button>
            </form>
            <p class="lead mt-4">Have An Account? <a href="/user/signin">Sign In</a></p>
        </div>
    </div>
</div>

